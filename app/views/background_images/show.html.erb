<div class="background-body">
  <%= attachment_image_tag @background_image, :image %>
  <p>ショップ名：<%= @background_image.shop_name %></p>
  <p>説明：<%= @background_image.caption %></p>
  <p>ユーザーネーム：<%= @background_image.user.name %></p>
  <p>投稿日時：<%= @background_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @background_image.user == current_user %>
    <%= link_to "削除", background_image_path(@background_image), method: :delete %>
  <% end %>
</div>
