<div class="card-list-containar py-5">
  <% background_images.each do |background_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to background_image_path(background_image.id) do %>
      <%= attachment_image_tag background_image, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag background_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(background_image_path(background_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= background_image.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= background_image.caption %></p>
          <span><i class="fas fa-user"></i> By <%= background_image.user.name %> ｜ </span>
          <span><%= link_to "#{background_image.background_comments.count} コメント", background_image_path(background_image.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate background_images %>
</div>