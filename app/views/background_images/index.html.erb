<% @background_images.each do |background_image| %>
<div>
  <%= link_to background_image_path(background_image.id) do %>
  <%= attachment_image_tag background_image, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p>ショップ名：<%= background_image.shop_name %></p>
  <p>説明：<%= background_image.caption %></p>
  <p>ユーザーネーム：<%= background_image.user.name %></p>
</div>
<% end %>